<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/agora_logo2"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <Button
        android:id="@+id/btn_create_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:text="닫기"
        android:textColor="#938C8C"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:paddingStart="70dp"
        android:text="스터디 생성"
        android:textColor="#B340D1"
        android:textSize="20dp"
        android:textStyle="bold" />

<!--    <Button-->
<!--        android:id="@+id/btn_create_complete"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="3dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginStart="70dp"-->
<!--        android:background="@color/white"-->
<!--        android:outlineSpotShadowColor="@color/white"-->
<!--        android:text="완료"-->
<!--        android:textColor="#938C8C"-->
<!--        android:textSize="15dp" />-->

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorGray" />
    <EditText
        android:id="@+id/edit_create_name"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingTop="32dp"
        android:textStyle="bold"
        android:hint="스터디 이름"
        android:textSize="16dp"
        android:paddingStart="10dp"
        android:outlineSpotShadowColor="@color/colorGray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="관심 분야"
            android:textStyle="bold"
            android:textSize="16dp"
            />
        <Spinner
            android:id="@+id/spinner_create_interest"
            android:layout_width="90dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginStart="205dp"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="스터디 횟수"
            android:textStyle="bold"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="195dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="주"
            android:textStyle="bold"
            android:textSize="16dp"
            />
        <Spinner
            android:id="@+id/spinner_create_frequency"
            android:layout_width="50dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="회"
            android:textStyle="bold"
            android:textSize="16dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="스터디 모집 인원"
            android:textStyle="bold"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/edit_create_MemNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="명"
            android:textStyle="bold"
            android:textSize="16dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/edit_create_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="스터디 진행에 필요한 게시글 내용을 작성해주세요.\n(스터디 모집 기준, 스터디 참여 방법, 스터디 목적 등)"
        android:paddingBottom="250dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_set_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="스터디 장소 설정"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />
      </LinearLayout>
</LinearLayout>